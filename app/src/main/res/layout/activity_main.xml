<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/num_1_btn"
        style="@style/buttonSize"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/num_4_btn"
        app:layout_constraintEnd_toStartOf="@+id/num_5_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/num_2_btn"
        style="@style/buttonSize"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/num_5_btn"
        app:layout_constraintStart_toEndOf="@+id/num_1_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/num_3_btn"
        style="@style/buttonSize"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/num_6_btn"
        app:layout_constraintStart_toEndOf="@+id/num_2_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/num_4_btn"
        style="@style/buttonSize"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num_5_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num_5_btn"
        style="@style/buttonSize"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num_6_btn"
        style="@style/buttonSize"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/num_5_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num_7_btn"
        style="@style/buttonSize"
        android:layout_marginEnd="4dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num_8_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_4_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/num_8_btn"
        style="@style/buttonSize"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_5_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/num_9_btn"
        style="@style/buttonSize"
        android:layout_marginStart="4dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/num_8_btn"
        app:layout_constraintTop_toBottomOf="@+id/num_6_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dec_btn"
        style="@style/buttonSize"
        android:layout_marginEnd="4dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num_0_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_7_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/num_0_btn"
        style="@style/buttonSize"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_8_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/clear_btn"
        style="@style/buttonSize"
        android:layout_marginStart="4dp"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/num_0_btn"
        app:layout_constraintTop_toBottomOf="@+id/num_9_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/minus_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_3_btn"
        app:layout_constraintTop_toTopOf="@+id/num_3_btn" />

    <Button
        android:id="@+id/minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/multi_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_3_btn"
        app:layout_constraintTop_toBottomOf="@+id/plus_btn" />

    <Button
        android:id="@+id/multi_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/num_3_btn"
        app:layout_constraintTop_toBottomOf="@+id/minus_btn" />

    <Button
        android:id="@+id/div_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/num_3_btn"
        app:layout_constraintTop_toBottomOf="@+id/multi_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/equal_btn"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_btn"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/math_txtVw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/num_2_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>